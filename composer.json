{
  "name": "mindbird/contao-notification_center-mailjet",
  "description": "Add mailjet gateway to notification center for contao",
  "minimum-stability": "stable",
  "keywords":["contao", "notification", "center", "mailjet"],
  "type":"contao-bundle",
  "license":"LGPL-3.0+",
  "authors": [
    {
      "name": "mindbird",
      "email": "info@mindbird.de"
    }
  ],
  "require": {
    "php": "^5.6 || ^7.0",
    "contao/core-bundle": "^4.4",
    "terminal42/notification_center": "^1.5",
    "mailjet/mailjet-apiv3-php": "^1.4"
  },
  "conflict": {
    "contao/core": "*",
    "contao/manager-plugin": "<2.0 || >=3.0"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.0",
    "friendsofphp/php-cs-fixer": "^2.12"
  },
  "extra": {
    "contao-manager-plugin": "Mindbird\\Contao\\MailjetNotification\\ContaoManager\\Plugin"
  },
  "autoload": {
    "psr-4": {
      "Mindbird\\Contao\\MailjetNotification\\": "src/"
    }
  }
}
